{
  "name": "ruby",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "rvm": {
      "upgrade": "stable",
      "rubies": [
        "2.0.0-p645",
        "2.1.6",
        "2.2.2"
      ],
      "default_ruby": "2.2.2",
      "global_gems": [
        { "name": "bundler" }
      ],
      "rvm_gem_options": "--no-rdoc --no-ri",
      "gpg": {
        "keyserver": "hkp://keys.gnupg.net"
      }
    }
  },
  "description": "The base role for systems that ruby",
  "run_list": [
    "recipe[rvm]",
    "recipe[rvm::system]",
    "recipe[rvm::vagrant]"
  ]
}
