{
  "name": "ruby",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "rvm": {
      "upgrade": "stable",
      "rubies": [
        "1.9.3-p551",
        "2.0.0-p598",
        "2.1.5",
        "jruby-1.7.16.1"
      ],
      "default_ruby": "2.1.5",
      "global_gems": [
        { "name": "bundler" }
      ],
      "rvm_gem_options": "--no-rdoc --no-ri"
    }
  },
  "description": "The base role for systems that ruby",
  "run_list": [
    "recipe[rvm]",
    "recipe[rvm::system]",
    "recipe[rvm::vagrant]"
  ]
}
